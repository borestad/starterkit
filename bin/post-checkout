#!/bin/bash
echo "post-checkout"
echo '----------------------------'

echo "Command1: $1"
echo "Command2: $2"

echo  $(git diff $1 $2 yarn.lock)

if [ "$1" != "$2" ]; then
    diff=$(git diff $1 $2 yarn.lock)
    if [ "$diff" != "" ]; then
        echo "yarn.lock has been changed! Installing dependencies..."
        yarn
    fi
fi