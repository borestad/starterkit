{
  "extends": [
    "tslint-config-standard",
    "tslint-eslint-rules",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": ["**/node_modules/**"]
  },
  "rules": {
    "interface-name": false,
    "no-unexpected-multiline": false,
    "no-unused-expression":true,
    "no-consecutive-blank-lines": true,
    "no-duplicate-variable": true,
    "no-debugger": true,
    "no-implicit-dependencies": false,
    "no-irregular-whitespace": true,
    "no-trailing-whitespace": true,
    "only-arrow-functions": [
      true,
      "allow-declarations",
      "allow-named-functions"
    ],
    "prefer-const": true,
    "prefer-template": [true, "allow-single-concat"],
    "ordered-imports": [
      true,
      {
        "import-sources-order": "lowercase-last"
      }
    ],
    "promise-function-async": true,
    "semicolon": false,
    "whitespace": [
      true,
      "check-decl",
      "check-operator",
      "check-rest-spread",
      "check-separator",
      "check-type",
      "check-type-operator",
      "check-typecast"
    ],
    "ban": [
      true,
      {
        "name": ["window", "alert"],
        "message": "Dont use global blocking methods"
      },
      {
        "name": ["document", "write"],
        "message": "Dont use global blocking methods"
      },
      { "name": ["test", "only"], "message": "Don't focus tests" },
      { "name": ["it", "only"], "message": "Don't focus tests" },
      { "name": ["describe", "only"], "message": "Don't focus tests" },
      { "name": ["describe", "skip"], "message": "Don't commit skipped tests" },
      { "name": ["test", "skip"], "message": "Don't commit skipped tests" },
      { "name": ["it", "skip"], "message": "Don't commit skipped tests" }
    ]
  }
}
