{
  "name": "@netent/starterkit",
  "description": "Starterkit is a `batteries included` base for creating awesome software using Typescript and best practices within Netent",
  "version": "1.0.0",
  "private": true,
  "license": "UNLICENSED",
  "author": {
    "name": "NetEnt AB (publ)",
    "email": "info@netent.com",
    "url": "https://www.netent.com/"
  },
  "maintainers": [
    "Johan Borestad <johan.borestad@netent.com>"
  ],
  "homepage": "https://git.netent.com/projects/GS/repos/starterkit",
  "bugs": {
    "url": "https://jira.netent.com/secure/RapidBoard.jspa?rapidView=1587"
  },
  "engines": {
    "node": ">= 10.x",
    "yarn": ">= 1.12.x",
    "npm": ">= 999-this-repo-is-yarn-only:see-npmrc"
  },
  "workspaces": [
    "examples/*",
    "config/*",
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build --parallel --stream",
    "ci": "./bin/ci",
    "clean": "git clean -dxf -e node_modules",
    "compile": "yarn compile:root && lerna run compile",
    "compile:root": "tsc --build tsconfig.root.json",
    "fix": "yarn prettier && yarn lint",
    "lint": "tslint -c tslint.json --project tsconfig.root.json --fix && lerna run lint --parallel",
    "postinstall": "git config --local include.path ../.gitconfig && del package-lock.json && node node_modules/husky/husky.js install",
    "preinstall": "rm -f .git/hooks/pre-commit || true",
    "prettier": "prettier -c --write \"**/*.{ts,js,tsx,jsx,json,md,html,css}\"",
    "test": "run-p -l test:unit test:e2e",
    "test:unit": "jest -w 2 -c config/jest/jest.config.js",
    "test:e2e": "lerna run test:e2e",
    "test:watch": "yarn test -- --watch --notify",
    "test:serial": "lerna exec -- yarn test"
  },
  "prettier": {
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "dependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "7.4.0",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.0",
    "@babel/preset-env": "^7.4.1",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/register": "7.4.0",
    "@types/fs-extra": "5.0.5",
    "@types/jest": "24.0.11",
    "babel-plugin-loop-optimizer": "1.4.1",
    "del-cli": "1.1.0",
    "eslint": "5.16.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-import": "2.17.2",
    "eslint-plugin-node": "8.0.1",
    "eslint-plugin-promise": "4.1.1",
    "eslint-plugin-standard": "4.0.0",
    "esm": "3.2.21",
    "fs-extra": "7.0.1",
    "husky": "1.3.1",
    "jest": "24.5.0",
    "jest-cli": "24.5.0",
    "lerna": "^3.13.1",
    "lint-staged": "8.1.5",
    "npm-run-all": "4.1.5",
    "prettier": "1.16.4",
    "ts-jest": "24.0.0",
    "ts-node": "8.0.3",
    "tslint": "5.14.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-config-standard": "8.0.1",
    "tslint-eslint-rules": "5.4.0",
    "typescript": "^3.3.4000",
    "typescript-tslint-plugin": "0.3.1",
    "yarn": "1.15.2"
  }
}
