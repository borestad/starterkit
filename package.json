{
  "name": "@netent/starterkit",
  "version": "1.0.0",
  "private": true,
  "license": "UNLICENSED",
  "author": {
    "name": "NetEnt AB (publ)",
    "email": "info@netent.com",
    "url": "https://www.netent.com/"
  },
  "contributors": [
    "Johan Borestad <johan.borestad@netent.com>"
  ],
  "workspaces": [
    "examples/*",
    "config/*"
  ],
  "scripts": {
    "build": "lerna run build --parallel --stream",
    "ci": "./bin/ci",
    "clean": "git clean -dxf -e node_modules",
    "compile": "tsc -b tsconfig.json",
    "fix": "prettier --write \"examples/**/*.ts\" && yarn lint",
    "install:yarn": "npm install yarn@`node -p -e \"require('./package.json').dependencies.yarn\"` --ignore-scripts --no-save --no-optional --no-package-lock",
    "lint": "lerna run lint --parallel",
    "postinstall": "node node_modules/husky/husky.js install",
    "preinstall": "rm -f .git/hooks/pre-commit || true",
    "prettier:": "prettier --write \"examples/**/*.ts\"",
    "test": "jest -c config/jest/jest.config.js",
    "test:watch": "yarn test -- --watch --notify",
    "test:serial": "lerna exec -- yarn test"
  },
  "engines": {
    "node": "10.x",
    "yarn": ">= 1.12.x",
    "npm": ">= this-repo-is-yarn-only:see-npmrc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn fix",
      "git add"
    ]
  },
  "prettier": {
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false,
    "parser": "typescript"
  },
  "devDependencies": {
    "@babel/register": "7.4.0",
    "del-cli": "1.1.0",
    "husky": "1.3.1",
    "lint-staged": "8.1.5",
    "prettier": "1.16.4"
  },
  "dependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "7.4.0",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.0",
    "@babel/preset-env": "^7.4.1",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "24.0.11",
    "babel-plugin-loop-optimizer": "1.4.1",
    "envinfo": "7.1.0",
    "jest": "24.5.0",
    "jest-cli": "24.5.0",
    "lerna": "^3.13.1",
    "npm-run-all": "4.1.5",
    "ts-jest": "24.0.0",
    "tslint": "5.14.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-config-standard": "8.0.1",
    "tslint-eslint-rules": "5.4.0",
    "typescript": "^3.3.4000",
    "typescript-tslint-plugin": "0.3.1",
    "yarn": "1.15.2"
  }
}
