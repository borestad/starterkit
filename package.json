{
  "name": "@netent/boilerplate-3d",
  "version": "0.0.1",
  "private": true,
  "license": "UNLICENSED",
  "author": {
    "name": "NetEnt AB (publ)",
    "email": "info@netent.com",
    "url": "https://www.netent.com/"
  },
  "contributors": [
    "Johan Borestad <johan.borestad@netent.com>"
  ],
  "scripts": {
    "ci": "yarn lint && yarn test --coverage --ci",
    "build": "yarn build:types && yarn build:js",
    "build:js": "babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps true",
    "build:types": "tsc --emitDeclarationOnly",
    "format": "prettier --write 'src/**/*.ts' && yarn lint --fix",
    "lint": "tslint -c tslint.json --project tsconfig.json -t codeFrame",
    "postinstall": "node node_modules/husky/husky.js install",
    "start": "yarn test:watch",
    "test": "jest --notify",
    "test:watch": "jest --watch --notify",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "yarn typecheck -- --watch",
    "upgrade:deps": "yarn upgrade-interactive --latest"
  },
  "engines": {
    "node": ">= 8.x",
    "yarn": ">= 1.12.x",
    "npm": ">= this-repo-is-yarn-only:see-npmrc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn format",
      "git add"
    ]
  },
  "prettier": {
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false,
    "parser": "typescript"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    },
    "bail": true,
    "silent": false,
    "verbose": false,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts|js)x?$",
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "lcov",
      "text",
      "text-summary"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx,js,jsx}",
      "!src/**/*.d.ts"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/jest": "23.3.9",
    "babel-plugin-loop-optimizer": "1.4.1",
    "husky": "1.1.4",
    "lint-staged": "8.0.5",
    "prettier": "1.15.2",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.16.0",
    "tslint-config-standard": "8.0.1",
    "tslint-eslint-rules": "5.4.0",
    "typescript": "^3.1.5"
  },
  "dependencies": {
    "jest": "23.6.0",
    "jest-cli": "23.6.0",
    "ts-jest": "23.10.4",
    "typescript-tslint-plugin": "0.1.0"
  }
}
