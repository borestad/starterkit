{
  "name": "@netent/starterkit",
  "version": "0.0.1",
  "private": true,
  "license": "UNLICENSED",
  "author": {
    "name": "NetEnt AB (publ)",
    "email": "info@netent.com",
    "url": "https://www.netent.com/"
  },
  "contributors": [
    "Johan Borestad <johan.borestad@netent.com>"
  ],
  "workspaces": [
    "examples/*"
  ],
  "scripts": {
    "ci": "yarn lint && yarn test --coverage --ci && lerna run build --stream",
    "fix": "prettier --write 'examples/**/*.ts' && yarn lint",
    "lint": "lerna run lint",
    "preinstall": "rm -f .git/hooks/pre-commit || true",
    "postinstall": "if-env NODE_ENV=production && true || node node_modules/husky/husky.js install",
    "test": "jest --notify",
    "test:watch": "jest --watch --notify",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "yarn typecheck -- --watch",
    "upgrade:deps": "yarn upgrade-interactive --latest",
    "install:yarn": "npm install yarn@`node -p -e \"require('./package.json').dependencies.yarn\"` --ignore-scripts --no-save --no-optional --no-package-lock"
  },
  "engines": {
    "node": ">= 8.x",
    "yarn": ">= 1.12.x",
    "npm": ">= this-repo-is-yarn-only:see-npmrc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn fix",
      "git add"
    ]
  },
  "prettier": {
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false,
    "parser": "typescript"
  },
  "devDependencies": {
    "del-cli": "1.1.0",
    "husky": "1.2.0",
    "lint-staged": "8.1.0",
    "prettier": "1.15.3"
  },
  "dependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.2.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/jest": "23.3.10",
    "babel-plugin-loop-optimizer": "1.4.1",
    "if-env": "1.0.4",
    "jest": "23.6.0",
    "jest-cli": "23.6.0",
    "lerna": "^3.6.0",
    "ts-jest": "23.10.5",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.17.0",
    "tslint-config-standard": "8.0.1",
    "tslint-eslint-rules": "5.4.0",
    "typescript": "^3.2.2",
    "typescript-tslint-plugin": "0.1.2",
    "yarn": "1.12.3"
  }
}
