{
  "name": "@scope/example-cypress",
  "description": "Experimental e2e-testing with Cypress",
  "private": true,
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "clean": "sk-clean",
    "open": "cypress open",
    "build": "tsc -b tsconfig.json --pretty",
    "test": "yarn test:e2e",
    "test:e2e": "exit 0 && yarn clean && cypress run",
    "lint": "npx eslint --ignore-path=../../.gitignore --fix . --ext js --ext ts"
  },
  "eslintConfig": {
    "extends": [
      "../../.eslintrc.js",
      "plugin:cypress/recommended"
    ],
    "plugins": [
      "cypress"
    ],
    "env": {
      "cypress/globals": true
    },
    "rules": {
      "no-unused-expressions": "off",
      "cypress/no-unnecessary-waiting": "off"
    }
  },
  "devDependencies": {
    "cypress": "3.2.0",
    "eslint-plugin-cypress": "2.2.1"
  }
}
