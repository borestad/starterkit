{
  "include": [
    "**/*.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],

  "exclude": [
    // Test files are already covered by Jest
    // "**/*.test.ts",
    // "**/node_modules/**",
    "**/dist/**",
    // "typings/browser.d.ts"
  ],

  // ========================================================================
  // ğŸ’¥ References projects ( https://www.typescriptlang.org/docs/handbook/project-references.html )
  // ========================================================================s
  "references": [],

  "compilerOptions": {

    // ========================================================================
    // ğŸ’¥ Plugins
    // ========================================================================s
    "plugins": [
      { "name": "typescript-tslint-plugin" }
    ],

    // ========================================================================s
    // ğŸ’¥ Basic options
    // =======================s=================================================s
    "declaration": true,                          // ğŸ”… Generates corresponding '.d.ts' file.
    "declarationMap": false,                      // ğŸ”… Generates a sourcemap for each corresponding '.d.ts' file.
    "importHelpers": true,                        // ğŸ”… Import emit helpers from 'tslib'.
    "lib": [                                      // ğŸ”… Specify library files to be included in the compilation.
      "es2015", "es2016", "es2017", "dom", "esnext"
    ],
    "module": "commonjs",                         // ğŸ”… Specify module code generation: 'none', 'commonjs', 'amd', 'system', 'umd', 'es2015', or 'ESNext'.
    "noEmit": true,                               // ğŸ”… Do not emit outputs.
    "outDir": "./node_modules/.tmp/build.tsc",    // ğŸ”… Redirect output structure to the directory.
    "rootDir": ".",                               // ğŸ”… Specify the root directory of input files. Use to control the output directory structure with --outDir.
    "sourceMap": true,                            // ğŸ”… Generates corresponding '.map' file.
    "target": "esnext",                           // ğŸ”… Specify ECMAScript target version: 'ES3' (default), 'ES5', 'ES2015', 'ES2016', 'ES2017','ES2018' or 'ESNEXT'.
    "allowJs": true,                              // ğŸ”… Allow javascript files to be compiled.
    "checkJs": false,                             // ğŸ”… Report errors in .js files.
    // "composite": true,

    "downlevelIteration": true,                   // ğŸ”… Provide full support for iterables in 'for-of', spread, and destructuring when targeting 'ES5' or 'ES3'.
    // "isolatedModules": true,                   // ğŸ”… Transpile each file as a separate module (similar to 'ts.transpileModule').
    // "jsx": "preserve",                         // ğŸ”… Specify JSX code generation: 'preserve', 'react-native', or 'react'.
    // "outFile": "./",                           // ğŸ”… Concatenate and emit output to single file.
    // "removeComments": true,                    // ğŸ”… Do not emit comments to output.
    // "skipLibCheck": true,                      // ğŸ”… Improve performance by skippping type checking of all declaration files (*.d.ts). (May be risky)


    // ========================================================================s
    // ğŸ’¥ Strict Type-Checking Options
    // ========================================================================s
    "strict": false,                          // ğŸ”… Enable all strict type-checking options.
    "noImplicitAny": false,                   // ğŸ”… Raise error on expressions and declarations with an implied 'any' type.
    // "strictNullChecks": true,              // ğŸ”… Enable strict null checks.
    // "strictFunctionTypes": true,           // ğŸ”… Enable strict checking of function types.
    // "strictPropertyInitialization": true,  // ğŸ”… Enable strict checking of property initialization in classes.
    // "noImplicitThis": true,                // ğŸ”… Raise error on 'this' expressions with an implied 'any' type.
    // "alwaysStrict": true,                  // ğŸ”… Parse in strict mode and emit "use strict" for each source file.


    // ========================================================================s
    // ğŸ’¥ Additional Checks
    // ========================================================================s
    // "noUnusedLocals": true,                // âŒ [Eslint] Report errors on unused locals.
    "noUnusedParameters": true,               // âŒ [Eslint] Report errors on unused parameters.
    // "noImplicitReturns": true,             // âŒ [Eslint] Report error when not all code paths in function return a value.
    // "noFallthroughCasesInSwitch": true,    // âŒ [Eslint] Report errors for fallthrough cases in switch statement.


    // ========================================================================s
    // ğŸ’¥ Module Resolution Options
    // ========================================================================s
    // Warning: allowSyntheticDefaultImports MAY trigger undesired behavior: https://github.com/Microsoft/vscode/issues/63013
    "allowSyntheticDefaultImports": false,    // ğŸ”… Allow default imports from modules with no default export. This does not affect code emit, just typechecking.
    "baseUrl": ".",                           // ğŸ”… Base directory to resolve non-absolute module names.
    "esModuleInterop": true,                  // ğŸ”… Enables emit interoperability between CommonJS and ES Modules via creation of namespace objects for all imports. Implies 'allowSyntheticDefaultImports'.
    "moduleResolution": "node",               // ğŸ”… Specify module resolution strategy: 'node' (Node.js) or 'classic' (TypeScript pre-1.6).
    "resolveJsonModule": true,                // ğŸ”… Allows for importing, extracting types from and generating .json files
    // "paths": {},                           // ğŸ”… A series of entries which re-map imports to lookup locations relative to the 'baseUrl'.
    // "preserveConstEnums": false,           // ğŸ”… Do not erase const enum declarations in generated code. See const enums documentation for more details.
    // "preserveSymlinks": true,              // ğŸ”… Do not resolve the real path of symlinks.
    // "rootDirs": [],                        // ğŸ”… List of root folders whose combined content represents the structure of the project at runtime.
    "typeRoots": [                            // ğŸ”… List of folders to include type definitions from.
      "node_modules/@types",
      "types"
    ],
    "types": [                                // ğŸ”… Type declaration files to be included in compilation ( node_modules/@types/... )
      "jest",
      "node"
    ],


    // ========================================================================s
    // ğŸ’¥ Source Map Options
    // ========================================================================s
    // "sourceRoot": "./",                    // ğŸ”… Specify the location where debugger should locate TypeScript files instead of source locations.
    // "mapRoot": "./",                       // ğŸ”… Specify the location where debugger should locate map files instead of generated locations.
    // "inlineSourceMap": true,               // ğŸ”… Emit a single file with source maps instead of having a separate file.
    // "inlineSources": true,                 // ğŸ”… Emit the source alongside the sourcemaps within a single file; requires '--inlineSourceMap' or '--sourceMap' to be set.


    // ========================================================================s
    // ğŸ’¥ Experimental Options
    // ========================================================================s
    "experimentalDecorators": true,           // ğŸ”… Enables experimental support for ES7 decorators.
    "emitDecoratorMetadata": true             // ğŸ”… Enables experimental support for emitting type metadata for decorators.


    // ========================================================================s
    // ğŸ’¥ Advanced Options
    // ========================================================================s
    // "declarationDir": "dist/types"         // Output directory for generated declaration files.
  }
}
